@model HouseApprovalModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="House Image">
        <div class="card-body text-center">
            <h4>@Model.Title</h4>
            <h6>Category: <b>@Model.Category</b></h6>
            <h6>Address: <b>@Model.Address</b></h6>
            <h6>Description: <b>@Model.Description</b></h6>
            <h6>
                Price Per Month:
                <b>@($"{Model.PricePerMonth:f2}") BGN</b>
            </h6>
            <h6>Agent: <b>@Model.AgentEmail</b></h6>
            <br />
            <form method="post">
                <input type="hidden" asp-for="Id" value="@Model.Id"/>
                <input type="submit" value="Approve" class="btn btn-success"/>
            </form>
            <a asp-area="" asp-controller="House" asp-action="Delete" asp-route-id="@Model.Id"
               class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>